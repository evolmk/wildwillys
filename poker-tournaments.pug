          .column.is-3
            img(src='https://via.placeholder.com/400x300')
          .column.is-3
            img(src='https://via.placeholder.com/400x300')
          .column.is-3
            img(src='https://via.placeholder.com/400x300')
          .column.is-3
            img(src='https://via.placeholder.com/400x300')
        .mt-10.has-text-centered
          a.button.is-primary(href='/gallery') View Gallery

    section.section.is-alt.is-contact
      include includes/contact-form.pug