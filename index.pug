            .summaries.mt-10(data-aos='fade-up', data-aos-delay='200')
              .columns
                .column.is-3.has-text-centered
                  img.icon-games(src='img/icon-games@2x.png')
                .column.is-9
                  h3.mb-20 We Have All The Popular Casino Games
                  .columns.games-condensed
                    .column.is-3.has-text-left
