extends includes/layout
block content
  include includes/header-homepage
  main
    section.section.summary#whatwedo
      .container
        .columns
          .column.is-8
            .columns
              .column.is-6
                .summaries(data-aos='fade-up', data-aos-delay='0')
                  a.summary-block(href='index.html#poker-tournaments', data-scrollid='poker-tournaments')
